@startuml Hotel Management System - Use Case Diagram

' Actors
actor "Guest\n(iOS App)" as Guest
actor Admin as Admin
actor Manager as Manager
actor Receptionist as Receptionist
actor Chef as Chef
actor "Cleaner" as Cleaner

' System boundary
rectangle "Hotel Management System" {

    ' Guest use cases (iOS App)
    package "Guest Features" {
        usecase "Register Account" as UC1
        usecase "Login" as UC2
        usecase "View Available Rooms" as UC3
        usecase "Make Reservation" as UC4
        usecase "View My Reservations" as UC5
        usecase "Cancel Reservation" as UC6
        usecase "Request Room Service" as UC7
        usecase "Request Housekeeping" as UC8
        usecase "Leave Review" as UC9
        usecase "View Staff Response" as UC10
        usecase "Update Profile" as UC11
        usecase "Manage Settings" as UC12
    }

    ' Admin use cases
    package "Admin Features" {
        usecase "Manage Employees" as UC13
        usecase "View Reports" as UC14
        usecase "Delete Guests" as UC15
    }

    ' Manager use cases
    package "Manager Features" {
        usecase "View Dashboard" as UC16
        usecase "Manage Rooms" as UC17
        usecase "View All Reservations" as UC18
        usecase "Respond to Reviews" as UC19
        usecase "View Guests" as UC20
    }

    ' Receptionist use cases
    package "Receptionist Features" {
        usecase "View Room Status" as UC21
        usecase "Update Room Status" as UC22
    }

    ' Chef use cases
    package "Chef Features" {
        usecase "View Service Dashboard" as UC23
        usecase "Manage Room Service" as UC24
    }

    ' Cleaner use cases
    package "Cleaner Features" {
        usecase "View Cleaning Dashboard" as UC25
        usecase "Manage Housekeeping" as UC26
    }

    ' System use cases
    package "System Features" {
        usecase "Send Email Notification" as UC27
        usecase "Send WebSocket Notification" as UC28
        usecase "Generate Reservation Code" as UC29
    }
}

